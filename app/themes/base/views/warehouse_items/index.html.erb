<%
  breadcrumb_nav.add_item 'Warehouses'
  breadcrumb_nav.add_item @warehouse.name, warehouse_path(@warehouse)
%>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card card-block no-padding">
        <table class="table table-hover">
          <tr>
            <th>
              <%= link_to new_warehouse_warehouse_item_path(@warehouse), class: 'btn btn-success btn-xs', data: { modal: true } do %>
                  <%= icon(:plus, :fa) %> New Item
              <% end %>
            </th>
            <th>Name</th>
            <th>Count</th>
          </tr>

          <tbody>
          <%= render @items %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>