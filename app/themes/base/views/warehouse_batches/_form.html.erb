<%= form_for @batch_form, html: { class: 'form-horizontal' }, data: { modal: { render_type: :replace } } do |f| %>
    <div class="modal-header">
      <h4 class="modal-title">Batch</h4>
    </div>

    <div class="modal-body">

      <%= validation_errors(@batch_form) %>

      <div class="form-group row">
        <%= f.label :item_id, "Item", class: "col-form-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.hidden_field :item_id %>
          <p class="form-control-static"><%= @batch_form.item.name %></p>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :price, "Price", class: "col-form-label col-lg-2" %>

        <div class="col-lg-10">
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <%= f.number_field :price, step: 0.01, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :count, "Count", class: "col-form-label col-lg-2" %>

        <div class="col-lg-10">
          <% if @batch_form.persisted? %>
              <p class="form-control-static"><%= @batch_form.count %></p>
          <% else %>
            <%= f.number_field :count, step: 1, class: 'form-control' %>
          <% end %>
        </div>
      </div>
      <div class="clearfix"></div>

    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default modal-close">Close</button>
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
<% end %>