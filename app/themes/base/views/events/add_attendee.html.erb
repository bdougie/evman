<%= form_for(@attendee, :html => { :class => 'form-horizontal' }) do |form| %>
    <%= form.hidden_field :event_id %>
    <div class="modal-content">

      <div class="color-line"></div>

      <div class="modal-header">
        <h4 class="modal-title">Add attendee to event</h4>
      </div>

      <div class="modal-body">

        <div class="form-group row">
          <label class="col-form-label col-lg-2">User</label>
          <div class="col-lg-10">
            <%= form.collection_select(:user_id, current_team.users, :id, :name) %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-form-label col-lg-2">Type</label>
          <div class="col-lg-10">
            <%= form.collection_select(:attendee_type_id, current_team.attendee_types.all, :id, :name) %>
          </div>
        </div>

        <div class="clearfix"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default modal-close">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
      </div>

    </div>
<% end %>

<script type="application/javascript">
  $('select').select2();
</script>