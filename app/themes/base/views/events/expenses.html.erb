<%
  breadcrumb_nav.add_item "Events", events_path
  breadcrumb_nav.add_item @event.name
%>

<div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header">
            <%= render partial: 'tabs' %>
          </div>
          <div class="card-block">
            <div class="row">
              <div class="col-xl-6">
                <%= render 'panel_expenses' %>
              </div>

              <div class="col-xl-6">
                <%= render 'panel_warehouse_transactions' %>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <ul class="list-group">
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-xs-6 text-right"><b>Total:</b></div>
                      <div class="col-xs-6"><%= number_to_currency @sums[:total] %></div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>