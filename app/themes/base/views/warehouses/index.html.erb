<% breadcrumb_nav.add_item 'Warehouses' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-block no-padding">

          <table class="table table-hover">
            <tr>
              <th width="180px">
                <%= link_to new_warehouse_path, class: 'btn btn-success btn-xs', data: { modal: true } do %>
                    <%= icon(:plus, :fa) %> New Warehouse
                <% end %>
              </th>
              <th>Name</th>
            </tr>

            <tbody>
              <%= render @warehouses %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>