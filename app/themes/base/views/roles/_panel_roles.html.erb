<div class="card">
  <div class="card-header">
    Roles
    <%= link_to new_role_path, class: 'btn btn-success btn-sm pull-right', data: { modal: true } do %>
        <%= icon(:plus, :fa) %> New Role
    <% end %>
  </div>
  <div class="card-block no-padding">

    <table class="table table-hover">
      <tr>
        <th width="250px"></th>
        <th>Name</th>
        <th>Permissions</th>
        <th>Default</th>
      </tr>

      <tbody>
      <%= render @roles %>
      </tbody>

    </table>
  </div>
</div>