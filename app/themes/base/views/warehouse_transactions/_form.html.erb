<%= form_for(@form, :html => { :class => 'form-horizontal' },
             data: {
                 modal: { render_type: :replace },
                 js: {
                     render_class:   "EvMan.Views.Warehousing.TransactionForm",
                     render_options: {
                         events_path: events_path(format: :json),
                         batches_path: autocomplete_warehouse_batches_path
                     }
                 }
             }) do |form| %>
    <div class="modal-content">

      <div class="color-line"></div>

      <div class="modal-header">
        <h4 class="modal-title">Add warehouse item transaction</h4>
      </div>

      <div class="modal-body">

        <%= validation_errors(@form) %>

        <div class="form-group row">
          <%= form.label :event, "Event", class: 'col-form-label col-lg-2' %>
          <div class="col-lg-10">
            <%= form.collection_select(:event_id, [@form.event].compact, :id, :name) %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :batch_id, "Item", class: 'col-form-label col-lg-2' %>
          <div class="col-lg-10">
            <%= form.collection_select(:batch_id, [@form.batch].compact, :id, :label) %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :count, "Count", class: 'col-form-label col-lg-2' %>
          <div class="col-lg-10">
            <%= form.number_field :count, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :returned, "Returned", class: 'col-form-label col-lg-2' %>
          <div class="col-lg-10">
            <%= form.number_field :returned, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, "Description", class: 'col-form-label col-lg-2' %>
          <div class="col-lg-10">
            <%= form.text_field :description, class: 'form-control' %>
          </div>
        </div>

        <div class="clearfix"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default modal-close">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
      </div>

    </div>
<% end %>
