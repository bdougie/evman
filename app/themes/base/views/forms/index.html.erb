<%
  breadcrumb_nav.add_item 'Forms'
%>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card card-block no-padding">
        <table class="table table-hover">
          <tr>
            <th>
              <%= link_to new_form_path, class: 'btn btn-success btn-xs', data: { modal: true } do %>
                  <%= icon(:plus, :fa) %> New Form
              <% end %>
            </th>
            <th>Name</th>
            <th>Description</th>
            <th>Created</th>
            <th title="# of submissions"># Sub.</th>
          </tr>

          <tbody>
            <%= render @forms %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>