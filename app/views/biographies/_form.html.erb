<%= form_for @biography, html: { class: 'form-horizontal' }, data: { modal: { render_type: :replace } } do |f| %>
  <div class="modal-header">
    <h4 class="modal-title">Biography</h4>
  </div>

  <div class="modal-body">

    <%= validation_errors(@biography) %>

    <div class="form-group row">
      <%= f.label :name, "Name", class: "col-form-label col-lg-2" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :content, "Content", class: "col-form-label col-lg-2" %>
      <div class="col-lg-10">
        <%= f.text_area :content, class: 'form-control', size: "100x15" %>
      </div>
    </div>

    <div class="clearfix"></div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default modal-close">Close</button>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>