<%
  breadcrumb_nav.add_item "Calendar"
%>

<%= content_tag :div, data: { js: { render_class: 'EvMan.Views.Calendars.Index' }} do %>
  <div class="row">
    <div class="col-lg-12">
      <form action="#" id="filter">
        <%= render @filterer, locals: { ui_options: {
            trigger_change: true,
            action_buttons: [
              { label: 'Bookmark', class: 'btn-danger', icon: 'bookmark', path:  new_filter_bookmark_path, method: :get }
            ]
        }} %>
      </form>

    </div>
  </div>

  <div class="row">
    <div class="col-xl-9 col-lg-8">
      <div class="card">
        <div class="card-block">
          <div id="calendar" style="position: relative; z-index: 0;"></div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-lg-4">
      <div class="card">
        <div class="card-header">
          Event Types
        </div>
        <div class="card-block">
          <% current_team.event_types.order('name').each do |event_type| %>
            <p style="border-left: <%= event_type.color %> 20px solid; padding-left: 10px;">
              <%= event_type.name %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>