<%= content_tag :div, data: {
    js: {
        render_vue: 'Filterer',
        render_options: {
            definition: filterer.definition,
            payload: filterer.payload.as_json
        }
    }
} do %>
  <%
    trigger_change_prop = nil
    trigger_change_prop = ':trigger-change="true"'.html_safe if defined? locals and locals[:trigger_change]

    show_submit_prop = nil
    show_submit_prop = ':show-submit="false"'.html_safe if defined? locals and locals[:show_submit] == false
  %>
  <filterer :definition="definition"
            :constrains_data="constrains"
            <%= trigger_change_prop %>
            <%= show_submit_prop %>
            ></filterer>
<% end %>