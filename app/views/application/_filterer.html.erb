<%
  filterer.set_ui_options(locals[:ui_options]) if defined? locals
%><%= content_tag :div, data: {
    js: {
        render_vue: 'Filterer',
        render_options: {
            definition: filterer.definition,
            payload: filterer.payload.as_json,
            ui_options: filterer.ui_options
        }
    }
} do %>

  <filterer :definition="definition"
            :constrains_data="constrains"
            :ui_options="ui_options"></filterer>
<% end %>