<%
  breadcrumb_nav.add_item 'Team'
  breadcrumb_nav.add_item @team.name, team_path(@team)
  breadcrumb_nav.add_item 'Settings'
%>

<div class="row">
  <div class="col-lg-6">
    <%= render 'form' %>
  </div>

  <div class="col-lg-6">
    <%= render partial: "slack/panel", locals: { team: @team } %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">More Settings</div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to "Forms", forms_path %></li>
        <li class="list-group-item"><%= link_to "Event Properties", event_properties_path %></li>
        <li class="list-group-item"><%= link_to "Event Performance Metrics", performance_metrics_path %></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
    <div class="col-xl-4">
      <%= render partial: "attendee_types/panel", locals: { team: @team } %>
    </div>

    <div class="col-xl-4">
      <%= render partial: "event_types/panel", locals: { team: @team } %>
    </div>

    <div class="col-xl-4">
      <%= render partial: "expense_types/panel", locals: { team: @team } %>
    </div>
</div>