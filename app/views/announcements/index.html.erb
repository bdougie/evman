<div class="container" style="margin-top: 60px;">
  <div class="row">
    <div class="col-lg-8 offset-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @announcement.heading %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Published: <%= time_ago_in_words @announcement.created_at %></h6>
          <p class="card-text"><%= raw @announcement.content %></p>
          <div class="float-right">
            <% @announcement.answer.each_pair do |name, data| %>
              <%= link_to announcement_path(@announcement, answer: name), method: :put, class: "card-link #{data['class']}" do %>
                <%= data['text'] %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>