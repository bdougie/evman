<div class="card">
  <div class="card-header">
    Notes
    <div class="pull-right">
      <%= link_to new_event_note_path(event_id: @event.id), data: { modal: true }, class: 'btn btn-info btn-sm new-note-button' do %>
          <%= icon(:plus, :fa) %> Note
      <% end %>
    </div>
  </div>
  <div class="container-fluid event-notes">
    <% @event.event_notes.includes(:user).order(:created_at => :desc).each do |note| %>
        <div class="row">
          <div class="col-lg-2">
            <img src="<%= note.user.avatar_url %>" class="img-circle">
          </div>
          <div class="col-lg-10 content">
            <%= note.content %>
            <div class="text-muted"><%= time_ago_in_words(note.created_at) %> ago</div>
          </div>
        </div>
    <% end %>
  </div>
</div>