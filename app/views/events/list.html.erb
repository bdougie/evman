<%
  breadcrumb_nav.add_item "Events"
%>

<div class="row">
  <div class="col-lg-12">
    <%= render @filterer %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-block no-padding">
        <table class="table table-hover">
          <tr>
            <th>Name</th>
            <th>Dates</th>
            <th>Location</th>
            <th>Type</th>
          </tr>

          <tbody>
            <%= render @events %>
          </tbody>

        </table>
      </div>
      <div class="card-footer">
        Showing <%= @events.size %> out of <%= @events.total_count %> events
      </div>
    </div>
  </div>
</div>

<%= paginate @events %>