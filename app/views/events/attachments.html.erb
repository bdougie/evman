<%
  breadcrumb_nav.add_item "Events", events_path
  breadcrumb_nav.add_item @event.name
%>

<div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <%= render partial: 'tabs' %>
          </div>
          <div class="card-block">
            <div class="row">
              <div class="col-lg-8">
                <ul>
                  <% @event.attachments.each do |attachment| %>
                      <li><a href="<%= attachment_path(attachment) %>" target="_blank"><%= attachment.name %></a></li>
                  <% end %>
                </ul>
              </div>
              <div class="col-lg-4">
                <div class="container-fluid">
                  <%= form_for Attachment.new, :html => { :class => 'form-horizontal' } do |form| %>
                      <input type="hidden" name="attachment[parent_id]" value="<%= @event.id %>">
                      <input type="hidden" name="attachment[parent_type]" value="Event">
                      <div class="form-group row">
                        <label class="col-form-label col-lg-2">Name</label>
                        <div class="col-lg-10">
                          <%= form.text_field :name, :class => 'form-control' %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-form-label col-lg-2">File</label>
                        <div class="col-lg-10">
                          <%= form.file_field(:file, :class => 'form-control') %>
                        </div>
                      </div>
                      <div class="row">
                        <button class="btn btn-success btn-sm pull-right" type="submit">Upload</button>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>