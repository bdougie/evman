<%
  breadcrumb_nav.add_item 'Team'
  breadcrumb_nav.add_item current_team.name, team_path(current_team)
  breadcrumb_nav.add_item 'Event Properties'
%>

<% content_for :breadcrumb_menu do %>
    <%= link_to new_event_property_path, class: 'btn text-success btn-xs', data: { modal: true } do %>
        <%= icon(:plus, :fa) %> New Property
    <% end %>
<% end %>

<%= content_tag :div, data: { js: {
    render_class: 'EvMan.Views.EventProperties.Index',
    render_options: {
        sort_path: sort_event_properties_path
    }
}} do %>
  <%= render @event_properties %>
<% end %>

